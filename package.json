{
  "name": "resoto-com",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/someengineering/resoto.com.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "docusaurus": "docusaurus",
    "build": "docusaurus build",
    "clear": "docusaurus clear",
    "deploy": "docusaurus deploy",
    "format": "prettier --write --cache .",
    "format:check": "prettier --check --cache .",
    "gen-api-docs": "docusaurus clean-api-docs all && docusaurus gen-api-docs all && prettier --write .",
    "lint": "eslint \"./**/*.{ts,tsx}\"",
    "optimize": "svgo -rf .",
    "prepare": "husky install",
    "serve": "docusaurus serve",
    "start": "docusaurus start",
    "swizzle": "docusaurus swizzle",
    "write-heading-ids": "docusaurus write-heading-ids",
    "write-translations": "docusaurus write-translations"
  },
  "dependencies": {
    "@docusaurus/core": "2.2.0",
    "@docusaurus/plugin-sitemap": "2.2.0",
    "@docusaurus/preset-classic": "2.2.0",
    "@docusaurus/theme-mermaid": "2.2.0",
    "@fec/remark-a11y-emoji": "3.1.0",
    "@heroicons/react": "1.0.6",
    "@mdx-js/react": "1.6.22",
    "@octokit/core": "4.1.0",
    "a11y-react-emoji": "1.2.0",
    "clsx": "1.2.1",
    "dayjs": "1.11.6",
    "docusaurus-plugin-openapi-docs": "1.4.5",
    "docusaurus-theme-openapi-docs": "1.4.5",
    "github-slugger": "2.0.0",
    "lottie-web": "5.9.6",
    "netlify-plugin-cache": "1.0.3",
    "prism-react-renderer": "1.3.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-modal": "3.16.1",
    "react-zoom-pan-pinch": "2.1.3",
    "remark-plugin-oembed": "0.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.2.0",
    "@commitlint/config-conventional": "17.3.0",
    "@docusaurus/module-type-aliases": "2.2.0",
    "@tsconfig/docusaurus": "1.0.6",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0",
    "commitizen": "4.2.5",
    "eslint": "8.27.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-formatjs": "4.3.4",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.11",
    "husky": "8.0.2",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "svgo": "3.0.2",
    "typescript": "4.9.3"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "**/*.{css,json,md,mdx,yml}": [
      "prettier --write"
    ],
    "**/*.svg": [
      "svgo"
    ]
  }
}
